<Window x:Class="RPGcardsGenerator.EditorProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGcardsGenerator"
        mc:Ignorable="d"
        Title="Proprietes" Height="600" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.RowSpan="2" Content="Sauvegarder" Margin="5" Height="25" Width="85" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button Grid.RowSpan="2" Content="Options" Margin="95,5,0,0" Height="25" Width="65" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Click" />
        <ContentControl Grid.Row="1" Grid.Column="1" x:Name="Slot" />
        <StackPanel x:Name="widgets" Grid.Row="1" />
    </Grid>
</Window>