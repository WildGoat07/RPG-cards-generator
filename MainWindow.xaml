<Window x:Class="RPGcardsGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGcardsGenerator"
        mc:Ignorable="d"
        Title="Accueil" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Grid.Row="0" Content="Nouveau Modèle" Click="Button_Click_1" />
        <Button Grid.Column="1" Grid.Row="0" Content="Lancer un Modèle" />
        <Button Grid.Column="0" Grid.Row="1" Content="Modifier un modèle" />
        <Button Grid.Column="1" Grid.Row="1" Content="Quitter" Click="Button_Click" />
    </Grid>
</Window>