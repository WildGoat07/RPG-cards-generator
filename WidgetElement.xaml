<UserControl x:Class="RPGcardsGenerator.WidgetElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RPGcardsGenerator"
             mc:Ignorable="d">
    <Grid>
        <Rectangle Stroke="#4CFFFFFF" Margin="0,0,0,-2" />
        <StackPanel Margin="5">
            <TextBlock Name="id" VerticalAlignment="Top" />
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button VerticalAlignment="Center" Content="X" Name="deleteButton" Width="20" Foreground="Red" />
                <Button VerticalAlignment="Center" Content="↓" Name="downButton" Width="20" Margin="5,0" Click="downButton_Click" />
                <Button VerticalAlignment="Center" Content="↑" Name="upButton" Width="20" Margin="5,0" Click="upButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>